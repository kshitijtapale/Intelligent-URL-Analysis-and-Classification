{
  "manifest_version": 3,
  "name": "Intelligent URL Classifier",
  "version": "1.0",
  "description": "Detects and blocks malicious URLs while browsing",
  "permissions": [
    "tabs",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/safe16.png",
      "48": "icons/safe48.png",
      "128": "icons/safe128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/safe16.png",
    "48": "icons/safe48.png",
    "128": "icons/safe128.png"
  }
}